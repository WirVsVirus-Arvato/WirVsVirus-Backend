                    {% endfor %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>
    #}
    <div class="row-fluid">
        <div class="col-sm-12">
            <hr>
        </div>
    </div>

    {% if corona_tracker_de != false %}
    <!-- AKTUELLE STATISTIKEN -->
    <section class="content-header">
        <h2 style="margin: 0; font-size: 18px;">
            Aktueller Stand in Deutschland <small>Stand: {{ corona_tracker_de.last_updated|date("d.m.Y, H:i:s") }}</small>
        </h2>
    </section>

    <div class="row-fluid" style="margin-top: 10px;">
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'rgba(0,0,0,0.2)',
                'icon'  : 'far fa-object-group',
                'solid' : 'yellow'
            }%}
                {% block box_text %}
                    Infiziert
                {% endblock %}
                {% block box_number %}
                    {{ corona_tracker_de.confirmed|number_format(0, ',', '.') }}
                {% endblock %}
                {% block progress_description %}
                    Bestätigt in Deutschland
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'rgba(0,0,0,0.2)',
                'icon'  : 'far fa-object-group',
                'solid' : 'red'
            }%}
                {% block box_text %}
                    Tode
                {% endblock %}
                {% block box_number %}
                    {{ corona_tracker_de.deaths|number_format(0, ',', '.') }}
                {% endblock %}
                {% block progress_description %}
                    Todesfälle in Deutschland
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'rgba(0,0,0,0.2)',
                'icon'  : 'far fa-object-group',
                'solid' : 'green'
            }%}
                {% block box_text %}
                    Geheilt
                {% endblock %}
                {% block box_number %}
                    {{ corona_tracker_de.recovered|number_format(0, ',', '.') }}
                {% endblock %}
                {% block progress_description %}
                    Geheilte in Deutschland
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    <div class="clearfix"></div>
    {% endif %}

    {% if corona_tracker_ww != false %}
    <section class="content-header">
        <h2 style="margin: 0; font-size: 18px;">
            Aktueller Stand Weltweit  <small>Stand: {{ corona_tracker_ww.last_updated|date("d.m.Y, H:i:s") }}</small>
        </h2>
    </section>

    <div class="row-fluid" style="margin-top: 10px;">
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'rgba(0,0,0,0.2)',
                'icon'  : 'far fa-object-group',
                'solid' : 'yellow'
            }%}
                {% block box_text %}
                    Infiziert
                {% endblock %}
                {% block box_number %}
                    {{ corona_tracker_ww.confirmed|number_format(0, ',', '.') }}
                {% endblock %}
                {% block progress_description %}
                    Bestätigt Weltweit
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'rgba(0,0,0,0.2)',
                'icon'  : 'far fa-object-group',
                'solid' : 'red'
            }%}
                {% block box_text %}
                    Tode
                {% endblock %}
                {% block box_number %}
                    {{ corona_tracker_ww.deaths|number_format(0, ',', '.') }}
                {% endblock %}
                {% block progress_description %}
                    Todesfälle Weltweit
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'rgba(0,0,0,0.2)',
                'icon'  : 'far fa-object-group',
                'solid' : 'green'
            }%}
                {% block box_text %}
                    Geheilt
                {% endblock %}
                {% block box_number %}
                    {{ corona_tracker_ww.recovered|number_format(0, ',', '.') }}
                {% endblock %}
                {% block progress_description %}
                    Geheilte Weltweit
                {% endblock %}
            {% endembed %}
        </div>
    </div>
    {% endif %}
    <div class="clearfix"></div>

{% endblock %}