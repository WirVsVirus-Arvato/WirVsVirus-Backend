{% extends '@AdminLTE/layout/security-layout.html.twig' %}

{% block login_box %}
    <h1>{{ 'title.forgot_password'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.email) }}

        <div>
            <input type="submit" value="{{ 'action.request_password'|trans }}" />
        </div>
    {{ form_end(form) }}
{% endblock %}
