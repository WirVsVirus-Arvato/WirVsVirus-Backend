{% extends 'dashboard.base.html.twig' %}

{% block page_title %}Dashboard{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    {# { dump(admin_lte_context.options) } #}
    <div class="row-fluid">
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'aqua',
                'icon'  : 'fas fa-flag',
            }%}
                {% block box_text %}
                    Offene Fälle
                {% endblock %}
                {% block box_number %}
                    3
                {% endblock %}
                {% block progress_description %}
                    Personen aktuell in Quarantäne
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'red',
                'icon'  : 'fas fa-procedures',
            }%}
                {% block box_text %}
                    Veränderungen
                {% endblock %}
                {% block box_number %}
                    1
                {% endblock %}
                {% block progress_description %}
                    veränderte Symptomatik, letzte 24h
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'green',
                'icon'  : 'fas fa-heartbeat',
            }%}
                {% block box_text %}
                    Entlassen
                {% endblock %}
                {% block box_number %}
                    0
                {% endblock %}
                {% block progress_description %}
                    Heute aus Quarantäne entlassen
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-sm-12 col-md-3">
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'yellow',
                'icon'  : 'far fa-object-group',
            }%}
                {% block box_text %}
                    Cluster
                {% endblock %}
                {% block box_number %}
                    ?
                {% endblock %}
                {% block progress_description %}
                    Erkannte Infektionscluster
                {% endblock %}
            {% endembed %}
        </div>

    </div>

    {#
    <div class="row-fluid">
        <div class="col-sm-12">
            {% embed '@AdminLTE/Widgets/box-widget.html.twig' with {
